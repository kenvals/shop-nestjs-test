{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "@root/*": ["."],
      "@app/*": ["src/*"],
      "@configuration/*": ["src/configuration/*"],
      "@products/*": ["src/products/*"],
    }
  }
}
